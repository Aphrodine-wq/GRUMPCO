# Analytics and Tracking Configuration
# Copy this file to .env and fill in your actual values

# Google Analytics 4 Measurement ID (format: G-XXXXXXXXXX)
VITE_GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# API Base URL for analytics endpoints
VITE_API_URL=http://localhost:3000

# Debug mode - enables console logging for analytics events
VITE_DEBUG_MODE=false

# Analytics retention period in months (GDPR compliance)
VITE_ANALYTICS_RETENTION_MONTHS=14

# Enable/disable specific tracking features
VITE_TRACK_PERFORMANCE=true
VITE_TRACK_ERRORS=true
VITE_TRACK_USER_BEHAVIOR=true

# Privacy settings
VITE_REQUIRE_CONSENT=true
VITE_ANONYMIZE_IP=true
