{
  "name": "g-rump-electron",
  "version": "1.0.0",
  "description": "G-Rump Desktop Application",
  "main": "dist/main.js",
  "author": "G-Rump Team",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "electron dist/main.js",
    "dev": "tsc -w",
    "package": "electron-builder"
  },
  "dependencies": {
    "dockerode": "^4.0.0"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.23",
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.0"
  },
  "build": {
    "appId": "com.grump.app",
    "productName": "G-Rump",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "../frontend/dist/**/*",
      "public/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "public/icon.icns",
      "target": ["dmg", "zip"]
    },
    "win": {
      "icon": "public/icon.ico",
      "target": ["nsis", "portable"]
    },
    "linux": {
      "icon": "public/icon.png",
      "target": ["AppImage", "deb"]
    }
  }
}
