{
  "name": "grump-backend",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "bin": "dist/index.js",
  "scripts": {
    "start": "node --import tsx src/index.ts",
    "start:prod": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "swc src -d dist --copy-files && node scripts/copy-migrations.mjs",
    "build:tsc": "tsc && node scripts/copy-migrations.mjs",
    "vercel-build": "swc src -d dist --copy-files || true && node scripts/copy-migrations.mjs",
    "bundle": "npm run build && pkg . --out-path dist-bundle",
    "type-check": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:coverage:report": "vitest run --coverage && open coverage/index.html",
    "test:coverage:ci": "vitest run --coverage --reporter=json --outputFile=coverage/test-results.json",
    "load-test": "k6 run tests/load/k6-scenarios.js",
    "evals": "node --import tsx tests/evals/runEvals.ts",
    "mcp-server": "tsx src/mcp/grump-server.ts",
    "rag:index": "tsx scripts/rag-index.ts",
    "deploy:setup": "../scripts/setup-vercel.sh",
    "deploy:setup:win": "..\\scripts\\setup-vercel.bat",
    "deploy:prod": "vercel --prod",
    "deploy:preview": "vercel",
    "env:add": "vercel env add"
  },
  "pkg": {
    "scripts": [
      "dist/**/*.js"
    ],
    "assets": [
      "dist/**/*"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist-bundle"
  },
  "dependencies": {
    "@grump/ai-core": "*",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.42.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.52.0",
    "@opentelemetry/resources": "^1.28.0",
    "@opentelemetry/sdk-node": "^0.211.0",
    "@opentelemetry/sdk-trace-base": "^1.28.0",
    "@opentelemetry/semantic-conventions": "^1.28.0",
    "@supabase/supabase-js": "^2.91.1",
    "@types/archiver": "^7.0.0",
    "archiver": "^7.0.1",
    "async-retry": "^1.3.3",
    "better-sqlite3": "^11.7.0",
    "bullmq": "^5.34.5",
    "cls-rtracer": "^2.6.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dockerode": "^4.0.2",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.3.2",
    "lru-cache": "^10.4.3",
    "node-cron": "^4.2.1",
    "opossum": "^5.0.1",
    "pino": "^10.3.0",
    "pino-http": "^11.0.0",
    "playwright": "^1.58.0",
    "prom-client": "^15.1.3",
    "rate-limit-redis": "^4.3.1",
    "stripe": "^17.4.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@swc/cli": "^0.1.65",
    "@swc/core": "^1.3.107",
    "@types/async-retry": "^1.4.8",
    "@types/better-sqlite3": "^7.6.11",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^5.0.0",
    "@types/node": "^20.11.0",
    "@types/node-cron": "^3.0.11",
    "@types/opossum": "^8.1.9",
    "@types/serve-static": "^1.15.5",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.1.0",
    "pino-pretty": "^13.1.3",
    "pkg": "^5.8.0",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.3.0",
    "vitest": "^1.6.0"
  }
}
