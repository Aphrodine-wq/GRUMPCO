{
  "name": "grump-cli",
  "version": "2.0.0",
  "description": "G-Rump CLI: ship, argument, plan, code, analyze (Optimized with caching, retry, and parallel support)",
  "type": "module",
  "bin": {
    "grump": "./dist/index.js",
    "grump-analyze": "./dist/index.js"
  },
  "scripts": {
    "build": "swc src -d dist --copy-files --strip-leading-paths",
    "build:tsc": "tsc",
    "build:native": "npm run build && pkg . --out-path dist-native",
    "start": "node dist/index.js",
    "run": "node --import tsx src/index.ts"
  },
  "pkg": {
    "scripts": [
      "dist/**/*.js"
    ],
    "targets": [
      "node20-win-x64",
      "node20-linux-x64",
      "node20-macos-x64"
    ],
    "outputPath": "dist-native"
  },
  "dependencies": {},
  "devDependencies": {
    "@swc/cli": "^0.1.65",
    "@swc/core": "^1.3.107",
    "@types/node": "^20.11.0",
    "pkg": "^5.8.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20"
  }
}
