{
  "name": "grump-cli",
  "version": "3.0.0",
  "description": "G-Rump CLI: A grumpy AI assistant that ships code (now with 100% more frowns)",
  "type": "module",
  "bin": {
    "grump": "./dist/index.js",
    "grump-cli": "./dist/index.js"
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "scripts": {
    "build": "swc src -d dist --copy-files",
    "build:fast": "swc src -d dist --copy-files -C jsc.minify.mangle=true -C jsc.minify.compress=true",
    "build:tsc": "tsc",
    "build:native": "npm run build && pkg . --out-path dist-native",
    "build:exe": "node scripts/bundle-cjs.mjs && pkg dist-native/grump.js --targets node18-win-x64 -o dist-native/grump.exe",
    "start": "GRUMP_FAST=true node dist/index.js",
    "start:fast": "GRUMP_NO_BRANDING=true GRUMP_FAST=true node dist/index.js",
    "run": "node --import tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "clean": "node -e \"require('fs').rmSync('dist', { recursive: true, force: true }); require('fs').rmSync('dist-native', { recursive: true, force: true }); console.log('Cleaned!');\""
  },
  "pkg": {
    "scripts": [
      "dist/**/*.js"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist-native"
  },
  "dependencies": {
    "@grump/shared-types": "workspace:*",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "commander": "^12.1.0",
    "conf": "^13.1.0",
    "gradient-string": "^3.0.0",
    "inquirer": "^12.11.1",
    "ora": "^8.2.0"
  },
  "devDependencies": {
    "esbuild": "^0.24.0",
    "@swc/cli": "^0.8.0",
    "@swc/core": "^1.3.107",
    "@types/node": "^25.1.0",
    "@yao-pkg/pkg": "^6.12.0",
    "pkg": "^5.8.0",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "cli",
    "ai",
    "code-generation",
    "grump",
    "g-rump",
    "ship",
    "workflow"
  ],
  "author": "G-Rump Team",
  "license": "MIT"
}
