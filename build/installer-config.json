{
  "app": {
    "name": "G-Rump",
    "version": "1.0.0",
    "publisher": "G-Rump Team",
    "website": "https://grump.dev",
    "supportUrl": "https://grump.dev/support",
    "description": "AI-Powered Project Management Tool"
  },
  "branding": {
    "primaryColor": "#6B21A8",
    "secondaryColor": "#A855F7",
    "accentColor": "#E9D5FF",
    "darkColor": "#3B0764",
    "logoPath": "assets\\logo.ico",
    "bannerPath": "assets\\installer-banner.bmp",
    "welcomePath": "assets\\welcome.bmp",
    "headerBackground": "#6B21A8",
    "headerText": "#FFFFFF"
  },
  "requirements": {
    "nodeVersion": "20.0.0",
    "nodeDownloadUrl": "https://nodejs.org/dist/v20.11.0/node-v20.11.0-x64.msi",
    "dockerDownloadUrl": "https://desktop.docker.com/win/main/amd64/Docker%20Desktop%20Installer.exe",
    "minDiskSpace": 500,
    "minMemory": 2048
  },
  "cli": {
    "packageName": "grump-cli",
    "npmRegistry": "https://registry.npmjs.org/"
  },
  "desktop": {
    "appName": "G-Rump Desktop",
    "exeName": "G-Rump.exe",
    "shortcutName": "G-Rump"
  },
  "templates": {
    "downloadUrl": "https://templates.grump.dev/templates.zip",
    "installPath": "templates"
  },
  "paths": {
    "installDir": "$PROGRAMFILES64\\G-Rump",
    "appDataDir": "$LOCALAPPDATA\\G-Rump",
    "startMenuDir": "$SMPROGRAMS\\G-Rump",
    "desktopShortcut": true
  },
  "features": {
    "checkNode": true,
    "checkDocker": true,
    "installNode": true,
    "installDocker": false,
    "addToPath": true,
    "downloadTemplates": true,
    "createUninstaller": true,
    "enableAutoUpdate": true
  },
  "localization": {
    "defaultLanguage": "english",
    "supportedLanguages": ["english", "spanish", "french", "german"]
  },
  "signing": {
    "certificatePath": "",
    "timestampUrl": "http://timestamp.digicert.com"
  },
  "output": {
    "installerName": "G-Rump-Setup-v1.0.0.exe",
    "compression": "lzma",
    "compressionLevel": "ultra"
  }
}
