{
  "name": "g-rump",
  "version": "2.1.0",
  "license": "MIT",
  "type": "module",
  "description": "G-Rump AI Development Platform",
  "author": "G-Rump Team",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:fast": "vite build --minify terser",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:fast": "concurrently \"vite\" \"wait-on http://localhost:5173 -t 3000 && electron .\"",
    "build:icon": "node scripts/build-icon.mjs",
    "electron:build": "npm run build:icon && vite build && electron-builder -c.npmRebuild=false",
    "electron:pack": "electron-builder --dir",
    "type-check": "svelte-check --tsconfig ./tsconfig.json",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,js,svelte,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,svelte,css,json}\"",
    "test:unit": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:report": "vitest run --coverage && open coverage/index.html",
    "test:coverage:ci": "vitest run --coverage --reporter=json --outputFile=coverage/test-results.json",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:ci": "playwright test --reporter=json --outputFile=test-results/e2e-results.json",
    "test:e2e:debug": "playwright test --debug",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@grump/shared-types": "workspace:*",
    "@supabase/supabase-js": "^2.91.1",
    "posthog-js": "^1.100.0",
    "diff": "^8.0.3",
    "dockerode": "^4.0.2",
    "dompurify": "^3.3.1",
    "jspdf": "^4.0.0",
    "lucide-svelte": "^0.563.0",
    "mermaid": "^10.9.0",
    "shiki": "^1.1.0",
    "svelte": "^5.50.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.58.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/svelte": "^5.3.1",
    "@types/dompurify": "^3.0.5",
    "@types/node": "^25.2.1",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^1.6.0",
    "autoprefixer": "^10.4.17",
    "concurrently": "^9.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.14.0",
    "globals": "^17.1.0",
    "jsdom": "^24.0.0",
    "playwright": "^1.58.2",
    "postcss": "^8.4.35",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.2.0",
    "rollup-plugin-visualizer": "^5.14.0",
    "svelte-check": "^4.1.1",
    "tailwindcss": "^3.4.0",
    "terser": "^5.30.0",
    "typescript": "^5.3.0",
    "vite": "^7.3.1",
    "vitest": "^1.6.0",
    "wait-on": "^7.2.0",
    "storybook": "^10.2.3",
    "@storybook/svelte-vite": "^10.2.7",
    "@storybook/addon-svelte-csf": "^5.0.10",
    "@chromatic-com/storybook": "^5.0.0",
    "@storybook/addon-a11y": "^10.2.7",
    "@storybook/addon-docs": "^10.2.3",
    "eslint-plugin-storybook": "^10.2.3",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5"
  },
  "build": {
    "appId": "com.grump.app",
    "productName": "G-Rump",
    "electronVersion": "28.0.0",
    "directories": {
      "output": "electron-dist"
    },
    "files": [
      "dist/**/*",
      "electron/**/*.cjs",
      "public/favicon.ico"
    ],
    "extraResources": [
      {
        "from": "../backend/dist",
        "to": "backend/dist",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../backend/node_modules",
        "to": "backend/node_modules",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../backend/package.json",
        "to": "backend/package.json"
      }
    ],
    "win": {
      "target": "portable",
      "icon": "build/icon.png",
      "signAndEditExecutable": false
    },
    "portable": {
      "artifactName": "grump.exe"
    },
    "extraMetadata": {
      "main": "electron/main.cjs"
    },
    "asarUnpack": [
      "*.node"
    ],
    "compression": "normal"
  }
}