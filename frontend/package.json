{
  "name": "g-rump",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "description": "G-Rump AI Development Platform",
  "author": "G-Rump Team",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "electron:pack": "electron-builder --dir",
    "type-check": "svelte-check --tsconfig ./tsconfig.json",
    "lint": "eslint \"src/**/*.ts\" \"src/**/*.js\"",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,js,svelte,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,svelte,css,json}\"",
    "test:unit": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:report": "vitest run --coverage && open coverage/index.html",
    "test:coverage:ci": "vitest run --coverage --reporter=json --outputFile=coverage/test-results.json",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:ci": "playwright test --reporter=json --outputFile=test-results/e2e-results.json",
    "test:e2e:debug": "playwright test --debug",

    "deploy:prod": "vercel --prod",
    "deploy:preview": "vercel",
    "env:add": "vercel env add",
    "env:add:api": "echo Run: vercel env add VITE_API_URL production"
  },
  "dependencies": {
    "@grump/shared-types": "*",
    "@supabase/supabase-js": "^2.91.1",
    "@types/dompurify": "^3.0.5",
    "diff": "^8.0.3",
    "dompurify": "^3.3.1",
    "jspdf": "^4.0.0",
    "mermaid": "^10.9.0",
    "shiki": "^1.1.0",
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",

    "@types/node": "^20.19.30",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitest/coverage-v8": "^1.6.0",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^2.36.0",
    "globals": "^17.1.0",
    "jsdom": "^24.0.0",
    "playwright": "^1.58.0",
    "postcss": "^8.4.35",
    "prettier": "^3.8.1",
    "prettier-plugin-svelte": "^3.2.0",
    "rollup-plugin-visualizer": "^5.14.0",
    "svelte-check": "^4.1.1",
    "tailwindcss": "^3.4.0",
    "terser": "^5.30.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.6.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.grump.app",
    "productName": "G-Rump",
    "directories": {
      "output": "electron-dist"
    },
    "files": [
      "dist/**/*",
      "electron/**/*.cjs"
    ],
    "win": {
      "target": "portable",
      "icon": "public/favicon.ico"
    },
    "portable": {
      "artifactName": "G-Rump.exe"
    }
  }
}
