{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert",
        "security",
        "deps"
      ]
    ],
    "scope-enum": [
      1,
      "always",
      [
        "backend",
        "frontend",
        "cli",
        "ai-core",
        "rag",
        "voice",
        "memory",
        "kimi",
        "compiler",
        "vscode",
        "intent-compiler",
        "deploy",
        "docs",
        "ci",
        "deps",
        "security"
      ]
    ],
    "subject-case": [2, "always", "lower-case"],
    "subject-max-length": [2, "always", 72],
    "body-max-line-length": [2, "always", 100],
    "header-max-length": [2, "always", 100]
  }
}
