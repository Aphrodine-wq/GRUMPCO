# EditorConfig - Consistent coding styles across editors and IDEs
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript, TypeScript, JSON, Svelte
[*.{js,jsx,ts,tsx,json,svelte,vue}]
indent_size = 2

# Rust
[*.rs]
indent_size = 4

# Python
[*.py]
indent_size = 4

# YAML
[*.{yml,yaml}]
indent_size = 2

# Markdown - preserve trailing whitespace for line breaks
[*.md]
trim_trailing_whitespace = false

# Makefiles require tabs
[Makefile]
indent_style = tab

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2
shell_variant = bash

# Docker
[Dockerfile*]
indent_size = 4

# Git config files
[.git*]
indent_size = 4

# Lock files - don't modify
[{package-lock.json,pnpm-lock.yaml,bun.lock,Cargo.lock}]
indent_size = 2
insert_final_newline = false

# Batch files use CRLF on Windows
[*.{bat,cmd}]
end_of_line = crlf

# PowerShell
[*.{ps1,psm1,psd1}]
end_of_line = crlf
indent_size = 4
