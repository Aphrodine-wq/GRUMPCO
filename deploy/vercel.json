{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "public": true,
  "installCommand": "npm install",
  "buildCommand": "npm run build:packages && cd backend && npm run build",
  "regions": ["iad1"],
  "builds": [
    {
      "src": "marketing-site/**",
      "use": "@vercel/static"
    },
    {
      "src": "backend/dist/index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/dist/**"],
        "memory": 1024,
        "maxDuration": 60
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/dist/index.js"
    },
    {
      "src": "/health(.*)",
      "dest": "backend/dist/index.js"
    },
    {
      "src": "/",
      "dest": "marketing-site/index.html"
    },
    {
      "src": "/(docs\\.html|robots\\.txt|sitemap\\.xml)",
      "dest": "marketing-site/$1"
    },
    {
      "src": "/(.*)",
      "dest": "marketing-site/$1"
    },
    {
      "src": "/(.*)",
      "headers": {
        "X-Content-Type-Options": "nosniff",
        "X-Frame-Options": "DENY",
        "X-XSS-Protection": "1; mode=block"
      },
      "continue": true
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "DB_TYPE": "supabase"
  }
}
